{
  "name": "@longevity/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm --workspace @longevity/engine run build && tsx watch src/index.ts",
    "build": "npm --workspace @longevity/engine run build && tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "npm --workspace @longevity/engine run build && vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prisma:generate": "prisma generate --schema ../../prisma/schema.prisma",
    "prisma:migrate": "prisma migrate deploy --schema ../../prisma/schema.prisma",
    "prisma:seed": "tsx ../../prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@longevity/engine": "*",
    "@prisma/client": "^6.3.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "jose": "^5.9.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "prisma": "^6.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
